$font_size = 16px
$font_size_big = $font_size + 4

border-radius($border_radius = 5px)
  border-radius $border_radius

box()
  box-sizing border-box
  -moz-box-sizing border-box
  -webkit-box-sizing border-box

body
  font-family Helvetica, arial, sans-serif
  font-size $font_size

.fp
  font-family Helvetica
  background #eee
  margin 40px 110px 30px 30px
  padding 30px 50px 120px
  
  h2
    font-size 40px
    margin 50px 0 30px
    
  ol 
    padding-bottom 40px
    li
      padding 8px 0
      font-weight bold
      font-size 18px
      &:first-child
        color #bbb
        text-decoration line-through
        -webkit-text-decoration-color #c00
        
  a
    color #196dc4
    text-decoration none
    &:hover
      text-decoration underline

#cont
  margin 20px auto
  width 960px

.button
  background-color #090
  border-radius()
  cursor pointer
  color #fff
  font-weight bold
  padding 6px 0
  text-align center

.room
  background-color #f2f2f2
  border-radius()
  box()
  height ($h = 160px)
  line-height 140%
  float left
  margin 5px
  padding 10px
  position relative
  width $h
  .button
    position absolute
    bottom 10px
    width $h - 2*10

$header_height = 50px
.header
  background-color #999
  border-radius()
  color #fff
  height $header_height
  padding 0 20px
  position relative
  .app
  .name
    font-size $font_size_big
    font-weight bold
    line-height $header_height
    padding-right 10px
  .info
    line-height $header_height
    position absolute
    right 20px
    top 0
    .label
      font-weight bold
      padding-left 10px

.content
  padding-top 10px
  .col
    background-color #f2f2f2
    border-radius()
    box()
    float left
    height ($h = 314px)
    margin-left 9px
    padding 10px
    width $h
  .col:first-child
    margin-left 0
    
.board-wrap
  .board
    background-color #bbb
    border-radius 50%
    height ($h = 200px)
    position relative
    width $h
    .player
      left 0
      position absolute
      top 0
    .current
      color #090
  .button-join
  .button-solve
    display none
  
    
.play-wrap
  .timer
  .play
  .button-start
    display none
  .starttime &
    .timer
      display block
  .state-active &
    .play
      display block
