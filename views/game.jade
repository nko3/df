.header
  span.app Nodoku:
  span.name
  .info
    span.player-data-wrap
      span.label Player:
      span.value.player-data
    span
      span.label Watchers:
      span.value.watchers
    span
      span.label Players:
      span.value.players-joined 0
      /
      span.value.players-limit
  .your-move-notice IT'S YOUR MOVE

.content
  .col.board-wrap
    .board
    .button-join
      .btn Join
    .arrow
    .solve-timeout
    .button-solve
      .btn Send
  .col.play-wrap
    .timer-cont
      | Your game will start in
      span.timer
      | seconds.
    .play
    .button-start
      | Start game at
      input(type="text", value="10")
      | seconds
      .btn Go
    .button-start-nopeople
      | At least 2 people are required to start the game.
    .button-start-notmaster
      | Waiting for
      span.mastername
      | to start the game.
    .game-over
      .player-limit
        | Game ended! Not enough players in the room.
      .winner
        | Game ended! KO win for
        span.winnername [winner]
        br
        br
        | New game will start automatically...
  .col.result-wrap
    .result.result-cpu
      .title CPU Profiler
      table
        thead
          tr
            td
            td Sum
            td Count
            td Avg
        tbody
      .no-result No results yet
    .result.result-net
      .title Network
      .result-net-content
        .names
        .packets
      .no-result No results yet
    .result.result-leaderboard
      .title Leaderboard
      table
        thead
          tr
            td
            td CPU
            td Net
            td Total
        tbody
      .no-result No results yet
  .clear
p
  a(href="javascript:test(1)") test

